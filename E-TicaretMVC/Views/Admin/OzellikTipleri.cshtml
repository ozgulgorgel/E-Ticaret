@model IEnumerable<E_TicaretMVC.Models.OzellikTip>
@{
    ViewBag.Title = "OzellikTipleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br /><br />

<div class="panel-body">
    <div class="adv-table editable-table ">
        <div class="clearfix">
            <div class="btn-group" style="margin-bottom: 10px;">
                <a href="/Admin/OzellikTipEkle" class="btn btn-success">
                    Yeni Özellik Tip <i class="icon-plus"></i>
                </a>
            </div>
        </div>
        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>Özellik Tip Adı</th>
                    <th>Açıklama</th>
                    <th>Kategorisi</th>
                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var tip in Model)
                {
                    <tr class="">
                        <td>@tip.Adi</td>
                        <td>@tip.Aciklama</td>
                        @if(tip.Kategori!=null){
                        <td>@tip.Kategori.Adi</td>
                        }
                        <td>
                            <a class="edit" href="/Admin/OzellikTipGuncelle/@tip.OzellikTipID">
                                <i class="icon-pencil"></i>
                                Düzenle
                            </a>
                        </td>
                        <td><a class="delete" href="/Admin/OzellikTipSil/@tip.OzellikTipID"><i class="icon-trash"></i>Sil</a></td>
                        @*<td><a class="delete" href="/Admin/KategoriEkle/@kategori.KategoriID"><i class="icon-add"></i>Resim Ekle</a></td>*@
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

