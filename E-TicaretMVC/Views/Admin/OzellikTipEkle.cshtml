
@model IEnumerable<E_TicaretMVC.Models.Kategori>

@{
    ViewBag.Title = "OzellikTipEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br /><br />
<h2>OzellikTipEkle</h2>
<div class="row" style="margin-top: 40px;">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Tip Ekle
            </header>
            <div class="panel-body">
                <form action="/Admin/OzellikTipEkle" class="form-horizontal tasi-form" method="post">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Kategori</label>
                        <div class="col-lg-10">
                            <select class="form-control m-bot15" name="KategoriID">
                                @foreach (var ktg in Model)
                                {
                                    <option value="@ktg.KategoriID">@ktg.Adi</option>
                                }
                            </select>
                            </div>
                        </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Adi">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Aciklama">
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-danger" type="submit">KAYDET</button>
                                </div>
                            </div>
                </form>
            </div>
        </section>

    </div>
</div>
