@model IEnumerable<E_TicaretMVC.Models.UrunOzellik>
@{
    ViewBag.Title = "UrunOzellikleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="panel-body">
    <div class="adv-table editable-table ">
        <div class="clearfix">
            <div class="btn-group" style="margin-bottom: 10px;">
                <a href="/Admin/UrunOzellikEkle" class="btn btn-success">
                    Yeni Ürün Özelliği<i class="icon-plus"></i>
                </a>
            </div>
        </div>
        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Özellik Tip Adı</th>
                    <th>Özellik Değer Adı</th>
                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var ozellik in Model)
                {
                    <tr class="">
                        @if(ozellik.Urun!=null)
                        { 
                            <td>@ozellik.Urun.Adi</td>
                        }
                        @if(ozellik.OzellikTip!=null)
                        { 
                            <td>@ozellik.OzellikTip.Adi</td>
                        }
                        @if (ozellik.OzellikDeger != null)
                        {
                            <td>@ozellik.OzellikDeger.Adi</td>
                        }
                        
                        @if(ozellik.Urun!=null&&ozellik.OzellikTip!=null&&ozellik.OzellikDeger !=null)
                        {
                        <td><a class="delete" href='@Url.Action("UrunOzellikSil", "Admin", new {urunId=@ozellik.UrunID,tipId=@ozellik.OzellikTipID,degerId=@ozellik.OzellikDegerID })'><i class="icon-trash"></i>Sil</a></td>
                        }
         
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

