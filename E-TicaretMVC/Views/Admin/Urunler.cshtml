@model IEnumerable<E_TicaretMVC.Models.Urun>

@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Urunler</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="margin-bottom: 10px;">
                    <a href="/Admin/UrunEkle" class="btn btn-success">
                        Yeni Ürün <i class="icon-plus"></i>
                    </a>
                </div>
                
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Alış Fiyat</th>
                        <th>Satış Fiyat</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        
                        <th>Güncelle</th>
                        <th>Sil</th>
                        <th>ResimEkle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var urun in Model)
                    {
                        <tr class="">
                        <td>@urun.Adi</td>
                        <td>@urun.Aciklama</td>
                        <td>@urun.AlisFiyat</td>
                        <td>@urun.SatisFiyat</td>
                        <td class="center">@urun.Kategori.Adi</td>
                         <td class="center">@urun.Marka.Adi</td>
                         
                        <td><a class="edit" href="/Admin/UrunGuncelle/@urun.UrunID">
                            <i class="icon-pencil"></i>
                            Düzenle</a></td>
                        <td><a class="delete" href="/Admin/UrunSil/@urun.UrunID"><i class="icon-trash"></i>Sil</a></td>
                        <td><a class="delete" href="/Admin/UrunResimEkle/@urun.UrunID"><i class="icon-plus"></i>Resim Ekle</a></td>
                        </tr>
                    }
                
                   
                 
            </table>
        </div>
    </div>
</section>

