@model IEnumerable<E_TicaretMVC.Models.OzellikDeger>
@{
    ViewBag.Title = "OzellikDegerleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>OzellikDegerleri</h2>
<div class="panel-body">
    <div class="adv-table editable-table ">
        <div class="clearfix">
            <div class="btn-group" style="margin-bottom: 10px;">
                <a href="/Admin/OzellikDegerEkle" class="btn btn-success">
                    Yeni Özellik Degeri <i class="icon-plus"></i>
                </a>
            </div>
        </div>
        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>Özellik Deger Adı</th>
                    <th>Açıklama</th>
                    <th>Özellik Tipi</th>
                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var deger in Model)
                {
                    <tr class="">
                        <td>@deger.Adi</td>
                        <td>@deger.Aciklama</td>
                        @if (deger.OzellikTip != null)
                        {
                            <td>@deger.OzellikTip.Adi</td>
                        }
                        <td>
                            <a class="edit" href="/Admin/OzellikDegerGuncelle/@deger.OzellikDegerID">
                                <i class="icon-pencil"></i>
                                Düzenle
                            </a>
                        </td>
                        <td><a class="delete" href="/Admin/OzellikDegerSil/@deger.OzellikDegerID"><i class="icon-trash"></i>Sil</a></td>
                      
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

