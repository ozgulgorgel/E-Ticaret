
@{
    ViewBag.Title = "MarkaGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model E_TicaretMVC.Models.Marka



<h2>MarkaGüncelle</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row" style="margin-top: 40px;">
    <div class="col-lg-12">
        <section class="panel">

            <header class="panel-heading">
                marka Güncelle
            </header>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MarkaID)
            <div class="panel-body">
                <form action="/Admin/MarkaEkle" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi" value="@Model.Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama" value="@Model.Aciklama">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Marka Resmi</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i>Resim Seç</span>

                                    <input type="file" class="default" name="fileUpload" />
                                </span>


                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>
}


