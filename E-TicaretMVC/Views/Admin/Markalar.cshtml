@model IEnumerable<E_TicaretMVC.Models.Marka>

@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@section head{
<link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
<script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="margin-bottom:10px;">
                    <a href="/Admin/MarkaEkle" class="btn btn-success">
                        Yeni Marka <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Resmi Göster</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                        <tr class="">
                            <td>@marka.Adi</td>
                            <td>@marka.Aciklama</td>

                            <td>
                                @if(marka.Resim!=null)
                                {
                                <a class="fancybox" href="@marka.Resim.OrtaYol">
                                    <i class="icon-eye-open"></i>
                                </a>
                                }
                            </td>
                            <td>
                            <a class="edit" href="/Admin/MarkaGuncelle/@marka.MarkaID">
                                <i class="icon-pencil"></i>
                            </a>
                           </td>
                            <td>
                            <a class="delete" href="/Admin/MarkaSil/@marka.MarkaID">
                                <i class="icon-trash"></i>
                            </a>
                            </td>
                        </tr>
                    }



            </table>
        </div>
    </div>
</section>



<script type="text/javascript">
    $(function () {
        //    fancybox
        jQuery(".fancybox").fancybox();
    });

</script>

